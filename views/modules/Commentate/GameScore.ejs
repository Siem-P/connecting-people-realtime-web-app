<section class="gamescore component">
	<div class="game-score-container">
		<!-- Display Flex & Flex-direction column -->
		<div class="wrapper">
			<!-- Display Flex & Row & space between-->
			<div class="logo">
				<img src="/assets/leeuwen.svg">
				<span class="team-name"><%- gameData.games[0].team1.name %></span>
			</div>
			<div class="score">
				<% let team1Score %>
				<% let team2Score %>

				<!-- Check if points array has content -->
				<% if (gameStats.stats[0].point.length > 0) { %>
				<!-- Get last index of stats point array -->
				<%  let lastPointIndex = gameStats.stats[0].point.length - 1
					team1Score = gameStats.stats[0].point[lastPointIndex].team1Score ?? 0
					team2Score = gameStats.stats[0].point[lastPointIndex].team2Score ?? 0
				} else {
					team1Score = 0
					team2Score = 0
				} %>

				<span class="scored-point" id="scoredPointTeam1"><%- team1Score %></span>
				<span>-</span>
				<span class="scored-point" id="scoredPointTeam2"><%- team2Score %></span>
			</div>
			<div class="logo">
				<img src="/assets/goudvissen.svg">
				<span class="team-name"><%- gameData.games[0].team2.name %></span>
			</div>
		</div>
		<div class="game-stat-buttons">
			<button id="scoreboard-button">Scoreboard</button>
			<button id="score-input-button">Score Input</button>
		</div>
	</div>
</section>