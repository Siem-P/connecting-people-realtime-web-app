<section class="gamescore component">
  <div class="game-score-container">
    <!-- Display Flex & Flex-direction column -->
    <div class="wrapper">
      <!-- Display Flex & Row & space between-->
      <div class="logo">
        <img src="/assets/leeuwen.svg">
        <span class="team-name"><%- gameData.games[0].team1.name %></span>
      </div>
      <div class="score">
        <!-- Get last index of stats point array -->
        <% let lastPointIndex = gameStats.stats[0].point.length - 1 %>
        <% let team1Score = gameStats.stats[0].point[lastPointIndex].team1Score %>
        <% let team2Score = gameStats.stats[0].point[lastPointIndex].team2Score %>
        
        <span class="scored-point"><%- team1Score %></span>
        <span>-</span>
        <span class="scored-point"><%- team2Score %></span>
      </div>
      <div class="logo">
        <img src="/assets/goudvissen.svg">
        <span class="team-name"><%- gameData.games[0].team2.name %></span>
      </div>
    </div>
    <div class="game-stat-buttons">
      <button id="scoreboard">Scoreboard</button>
      <button id="stats">Stats</button>
    </div>
  </div>
</section>
