<%- include('./partials/head') %>

<main class="schedule-main">
    <div class="schedule-content-wrapper">
        <!-- Heading with logo -->
        <div class="logo-lg">
            <img src="./assets/logo-text-svg.svg" alt="Commentary Source logo" class="logo-text">
        </div>

        <section class="team-form component">
            <h1 class="team-form-heading">Add Fact</h1>

            <form class="add-team-form" action="/factform" method="post" name="addTeamForm">
                <div class="form-content">
                    <div class="form-group">
                        <label for="name">Player name *</label>
                        <input type="text" name="name" id="name" value="<%= locals.values?.name ?? ''%>" required>
                    </div>

                    <div class="form-group">
                        <label for="jerseyNumber">Jersey Number *</label>
                        <input type="number" name="jerseyNumber" id="jerseyNumber" value="<%= locals.values?.jerseyNumber ?? ''%>" required>
                    </div>

                    <fieldset>
                        <legend>Gender *</legend>
                            <div class="form-group">
                                <label for="male">Male</label>
                                <input type="radio" name="gender" id="male" value="Male" required/>
                            </div>

                            <div class="form-group">
                                <label for="female">Female</label>
                                <input type="radio" name="gender" id="female" value="Female" />
                            </div>

                            <div class="form-group">
                                <label for="nonbinary">Non Binary</label>
                                <input type="radio" name="gender" id="nonbinary" value="NonBinary" />
                            </div>
                    </fieldset>

                    <div class="form-group">
                        <label for="height">Height *</label>
                        <input type="number" name="height" id="height" value="<%= locals.values?.height ?? ''%>" required>
                    </div>

                    <div class="form-group">
                        <label for="pronounced">Pronounced</label>
                        <input type="text" name="pronounced" id="pronounced" value="<%= locals.values?.pronounced ?? ''%>">
                    </div>

                    <div class="form-group">
                        <label for="pronouns">Pronouns</label>
                        <input type="text" name="pronouns" id="pronouns" value="<%= locals.values?.pronouns ?? ''%>">
                    </div>

                    <div class="form-group">
                        <label for="team">Team *</label>
                        <select name="team">
                            <option disabled selected>--- Select ---</option>

                            <!-- If statement to check whether teams exist -->
                            <!-- For each loop to through each team -->
                            <!-- new <option> for each team -->
                            <!-- Else -> no team available? Create new team -->

                            <% allTeams.teams.forEach(team => { %>
                            <option value="<%- team.id %>"><%- team.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <!-- Add Empty Team array in the backend -->
                    <!-- Add Empty Facts array in the backend -->
                </div>
                <input class="form-submit" type="submit" value="Add Team">
            </form>
        </section>
    </div>

    <!-- Sidebar nav -->
    <%- include('./modules/AsideNav') %>

</main>

<%- include('./partials/footer') %>